<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-2">Your Favorite Stays</h2>
          <p class="text-gray-600">Properties you've saved for later</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% favouriteHomes.forEach(home=> { %>
            <div
              class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>"
                class="w-full h-48 object-cover hover:opacity-90 transition-opacity">

              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-3">
                  <%= home.houseName %>
                </h3>

                <div class="flex items-center text-gray-600 mb-4">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <%= home.location %>
                </div>

                <div class="flex justify-between items-center mb-4">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span class="ml-1 text-gray-700">
                      <%= home.rating %>
                    </span>
                  </div>
                  <span class="text-xl font-bold text-red-500">
                    $<%= home.price %> <span class="text-sm font-normal text-gray-500">/ night</span>
                  </span>
                </div>

                <div class="flex space-x-2">
                  <a href="/homes/<%= home._id %>"
                    class="flex-1 text-center py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors duration-200">
                    View Details
                  </a>
                  <form action="/favourites/delete/<%= home._id %>" method="POST" class="flex-1">
                    <button type="submit"
                      class="w-full py-2 border-2 border-red-500 text-red-500 rounded-lg hover:bg-red-50 transition-colors duration-200">
                      Remove
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>