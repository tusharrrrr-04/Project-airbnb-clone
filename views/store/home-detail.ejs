<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg overflow-hidden max-w-6xl my-10">
        <!-- Hero Section -->
        <div class="relative h-96">
          <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6">
            <h2 class="text-4xl text-white font-bold">
              <%= home.houseName %>
            </h2>
          </div>
        </div>

        <!-- Content Section -->
        <div class="p-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Main Info -->
            <div class="md:col-span-2 space-y-6">
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-2xl font-semibold mb-4 text-gray-800">About this place</h3>
                <p class="text-gray-600 leading-relaxed">
                  <%= home.description %>
                </p>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="bg-gray-50 rounded-lg p-6">
                  <h3 class="text-xl font-semibold mb-2 text-gray-800">Location</h3>
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <%= home.location %>
                  </div>
                </div>

                <div class="bg-gray-50 rounded-lg p-6">
                  <h3 class="text-xl font-semibold mb-2 text-gray-800">Rating</h3>
                  <div class="flex items-center">
                    <% for(let i=0; i < Math.floor(home.rating); i++) { %>
                      <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path
                          d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                      <% } %>
                        <span class="ml-2 text-lg text-gray-600">
                          <%= home.rating %> / 5
                        </span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Booking Card -->
            <div class="md:col-span-1">
              <div class="bg-gray-50 rounded-lg p-6 sticky top-4">
                <div class="mb-4">
                  <span class="text-3xl font-bold text-gray-900">$<%= home.price %></span>
                  <span class="text-gray-600">/ night</span>
                </div>

                <button
                  class="w-full bg-red-500 text-white py-3 px-4 rounded-lg font-medium hover:bg-red-600 transition duration-200">
                  Book Now
                </button>

                <div class="mt-4">
                  <%- include('../partials/favourite') %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
  </body>

  </html>