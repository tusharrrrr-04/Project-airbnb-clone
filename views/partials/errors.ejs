<% if (errors.length> 0) { %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6" role="alert">
    <strong class="font-bold">Error!</strong>
    <ul class="mt-2 list-disc list-inside">
      <% errors.forEach(error=> { %>
        <li class="text-sm">
          <%= error %>
        </li>
        <% }) %>
    </ul>
  </div>
  <% } %>